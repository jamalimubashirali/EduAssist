{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup-font": "bash scripts/create_custom_font.sh",
    "font-info": "echo 'GameFont is ready! Use font-game class in your components.'",
    "validate:connectivity": "tsx scripts/validate-service-connectivity.ts",
    "test": "vitest",
    "test:connectivity": "vitest run src/tests/service-connectivity-validation.test.ts",
    "test:integration": "tsx src/tests/integration/run-integration-tests.ts",
    "test:topic-service": "vitest run src/tests/integration/topic-service-integration.test.ts --config vitest.integration.config.ts",
    "test:quiz-service": "vitest run src/tests/integration/quiz-service-integration.test.ts --config vitest.integration.config.ts",
    "test:user-journey": "vitest run src/tests/integration/user-journey-integration.test.ts --config vitest.integration.config.ts",
    "test:algorithms": "vitest run src/tests/integration/algorithm-integration.test.ts --config vitest.integration.config.ts",
    "test:data-flow": "vitest run src/tests/integration/data-flow-validation.test.ts --config vitest.integration.config.ts",
    "test:all-integration": "vitest run src/tests/integration/ --config vitest.integration.config.ts --reporter=verbose",
    "test:validate-setup": "node src/tests/integration/simple-validation.js"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@reduxjs/toolkit": "^2.8.2",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.528.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.1.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.28",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^2.1.9"
  }
}
